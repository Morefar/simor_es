= form_for @account do |f|
  - if @account.errors.any?
    = render "shared/error_messages", target: @account
  .row
    %small.required_notification= t("shared.required_notification")
    .row
      .field.medium-4.columns
        = f.label :organization_name
        = f.text_field :organization_name, placeholder: "Nombre de la organizaci√≥n", required: true
  .actions
    = f.submit "Guardar"
