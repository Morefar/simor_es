
<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('shared.name')%></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |cat|%>
      <tr>
        <td>
          <%= cat.name %>
        </td>
        <td>
          <%= link_to "", edit_category_url(cat.id), class: 'icon-edit' %>
        </td>
        <td>
          <%= link_to "", category_url(cat.id), class: 'icon-trash', :method => :delete, :confirm => "Are you completely sure you want to erase #{cat.name} category?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
<%= link_to t('.new_btn'), new_category_url, class: 'button success radius'  %>
