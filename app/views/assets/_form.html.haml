= form_for @asset  do |form|
  = render 'shared/error_messages', target: @asset
  .row
    %small.required_notification= t('shared.required_notification')
  .row
    .field.medium-4.columns
      = form.label :contract_number
      = form.text_field :contract_number,
        data: { autocomplete_source: contracts_path },
        placeholder: "Número del contrato", autofocus: true, required: true,
        class: "autocomplete"
      %span.form_hint= t(".contract_number_hint")
  .contract_info
  %h4.section-label= t('inspections.form.fieldset.information')
  .row
    .field.medium-3.columns
      = form.label :invoice_id
      = form.text_field :invoice_id, required: true
    .field.medium-3.columns
      = form.label :inventory_number
      = form.text_field :inventory_number, required: true
    .field.medium-3.columns.pull-3
      = form.label :transit_permit
      = form.text_field :transit_permit
      %span.form_hint= t(".transit_permit_hint")
  .row
    .field.medium-3.columns
      = form.label :license_plate
      = form.text_field :license_plate, placeholder: "AAA123", required: true
      %span.form_hint= t(".license_plate_hint")
    .field.medium-3.columns
      = form.label :make_name
      = form.text_field :make_name, data: {autocomplete_source: makes_path},
        required: true, class: "autocomplete"
    .field.medium-3.columns
      = form.label :model_name
      = form.text_field :model_name, data: {autocomplete_source: models_path},
        required: true, class: "autocomplete"
    .field.medium-3.columns
      = form.label :year
      = form.select :year, (2000..(Date.current >> 12).year), |
                          selected: Date.current.year         |
  .row
    .field.medium-3.columns
      = form.label :cylinder_cap
      = form.number_field :cylinder_cap, min: 1
      %span.form_hint= t(".cylinder_cap_hint")
    .field.medium-3.columns
      = form.label :color_name
      = form.text_field :color_name, data: {autocomplete_source: colors_path},
        required: true, class: "autocomplete"
    .field.medium-3.columns.pull-3
      = form.label :service_type
      = form.select :service_type, [t('.private'),t('.public'),               |
                  t('.diplomatic'),t('.official'),t('.special'),t('.others')] |
  .row
    .field.medium-3.columns
      = form.label :kind_name
      = form.text_field :kind_name, data: {autocomplete_source: kinds_path},
        required: true, class: "autocomplete"
    .field.medium-3.columns
      = form.label :body_name
      = form.text_field :body_name, data: {autocomplete_source: bodies_path},
        required: true, class: "autocomplete"
    .field.medium-3.columns
      = form.label :fuel_type
      = form.select :fuel_type, [t('.gasoline'),t('.gnv'),t('.diesel'), |
        t('.gas_gasoline'),t('.electric'),t('.hidrogen'),               |
        t('.ethanol'),t('.biodiesel')]                                  |
    .field.medium-3.columns
      = form.label :capacity
      = form.number_field :capacity, min: 1
  .row
    .field.medium-3.columns
      = form.label :motor_number
      = form.text_field :motor_number
    .field.medium-3.columns
      = form.label :rerecorded_motor
      = form.check_box :rerecorded_motor
      %span.form_hint= t(".rerecorded_hint")
    .field.medium-3.columns.pull-3
      = form.label :vin
      = form.text_field :vin
      %span.form_hint= t(".vin_hint")
  .row
    .field.medium-3.columns
      = form.label :serial_number
      = form.text_field :serial_number
    .field.medium-3.columns
      = form.label :rerecorded_serial
      = form.check_box :rerecorded_serial
      %span.form_hint= t(".rerecorded_hint")
    .field.medium-3.columns
      = form.label :chassis_number
      = form.text_field :chassis_number, required: true
      %span.form_hint= t(".vin_hint")
    .field.medium-3.columns
      = form.label :rerecorded_chassis
      = form.check_box :rerecorded_chassis
      %span.form_hint= t(".rerecorded_hint")
  %section#asset_additional_info
    %h4.section-label= t('.fieldset.additional_info')
    .row
      .field.medium-3.columns
        = form.label :mobility_restriction
        = form.text_field :mobility_restriction
      .field.medium-3.columns
        = form.label :shield_level
        = form.number_field :shield_level, min: 1
        %span.form_hint= t(".shield_hint")
      .field.medium-3.columns.pull-3
        = form.label :horse_power
        = form.number_field :horse_power, min: 1
    .row
      .field.medium-3.columns
        = form.label :import_statement
        = form.text_field :import_statement
      .field.medium-3.columns.center
        = form.label :importd_assembld
        = form.check_box :importd_assembld
        %span.form_hint= t(".i_e_hint")
      .field.medium-3.columns
        = form.label :import_date do
          %i.icon-calendar
          Fecha importación
        = form.text_field :import_date, class: 'date-field'
      .field.medium-3.columns
        = form.label :number_of_doors
        = form.number_field :number_of_doors, min: 1
    .row
      .field.columns
        = form.label :property_limitation
        = form.text_field :property_limitation
    .row
      .field.medium-3.columns
        = form.label :registration_date do
          %i.icon-calendar
          Fecha matricula
        = form.text_field :registration_date, class: 'date-field'
      .field.medium-3.columns
        = form.label :tp_issue_date do
          %i.icon-calendar
          Expedición Licencia
        = form.text_field :tp_issue_date, class: 'date-field'
      .field.medium-3.columns.pull-3
        = form.label :tp_expiration_date do
          %i.icon-calendar
          Fecha vencimiento
        = form.text_field :tp_expiration_date, class: 'date-field'
    .row
      .field.medium-9.columns
        = form.label :transit_authority
        = form.text_field :transit_authority
    .row
      .field.medium-3.columns
        = form.label :book_value
        = form.number_field :book_value, placeholder: 'i.e. 15000000.50', |
                                          required: true, min: 1          |
        %span.form_hint= t(".value_hint")
  .actions
    = form.submit
