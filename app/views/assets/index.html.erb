<h1>Listing assets</h1>

<table>
  <tr>
    <th>Transit Permit</th>
    <th>license plate</th>
    <th>make</th>
    <th>model</th>
    <th>year</th>
    <th>Service Type</th>
    <th>Initial Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td><%= asset.transit_permit %></td>
    <td><%= asset.license_plate %></td>
    <td><%= asset.make.name %></td>
    <td><%= asset.model.name %></td>
    <td><%= asset.year %></td>
    <td><%= asset.service_type %></td>
    <td><%= asset.book_value %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

