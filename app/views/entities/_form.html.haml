=form_for @entity do |f|
  = render 'shared/error_messages', target: @entity

  .row
    .field.large-12.columns
      = f.label :name
      = f.text_field :name, required: true
  .row
    .field.large-6.columns
      = f.label :identification_type_id
      = f.collection_select :identification_type_id, IdentificationType.all, :id, :name, required: true
    .field.large-6.columns
      = f.label :identification_number
      = f.text_field :identification_number, required: true
  .row
    .field.large-12.columns
      = f.label :address
      = f.text_field :address, required: true
  .row
    .field.large-6.columns
      = f.label :city
      = f.text_field :city, required: true
    .field.large-6.columns
      = f.label :state
      = f.text_field :state, required: true
  .row
    .field.large-12.columns
      = f.label :email
      = f.email_field :email
  .row
    .field.large-6.columns
      = f.label :mobile_phone
      = f.phone_field :mobile_phone
    .field.large-6.columns
      = f.label :phone
      = f.phone_field :phone
  .row
    .action
      = f.submit


