%h1= t('.title')
%p= link_to t('.new_btn'), new_entity_url, class: "button radius success"
.row
  %table
    %thead
      %tr
        %th= t('entities.shared.name')
        %th= t('entities.shared.identification_number')
        %th= t('entities.shared.email')
        %th= t('entities.shared.city')
        %th= t('entities.shared.lease_contracts')
        %th= t('entities.shared.cosigner_contracts')
    %tbody
      - @entities.each do |entity|
        %tr
          %td= link_to entity.name, entity
          %td
            = entity.identification_type.name
            = entity.identification_number
          %td= entity.email
          %td= entity.city
          %td= entity.contracts_as_lessee.count
          %td= entity.contracts_as_cosigner.count
.row
  = paginate @entities
