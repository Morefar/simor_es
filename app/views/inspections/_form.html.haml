= form_for @inspection do |f|
  = render 'shared/error_messages', target: @inspection
  .row
    %small.required_notification= t('shared.required_notification')
  .row.asset_info
  = field_set_tag t('.fieldset.record'), class: 'round' do
    .row
      .field.large-6.columns
        = f.label :inspection_number
        = f.text_field :inspection_number, autofocus: true, required: true,
          placeholder: t(".inspection_number_placeholder")
        %span.form_hint= t(".inspection_number_hint")
      .field.large-6.columns
        = f.label :asset_license_plate
        = f.text_field :asset_license_plate, data: { autocomplete_source: assets_path },
          placeholder: t('.license_plate_number_placeholder'), required: true,
          class: "autocomplete"
        %span.form_hint= t(".asset_license_plate_hint")
    .row
      .field.large-4.columns
        = f.label :address
        = f.text_field :address, required: true
        %span.form_hint= t(".address_hint")
      .field.large-4.columns
        = f.label :city
        = f.text_field :city, required: true
      .field.large-4.columns
        = f.label :state
        = f.text_field :state, required: true
        %span.form_hint= t(".state_hint")
    .row
      .field.large-4.columns
        = f.label :inspection_date
        = f.text_field :inspection_date, class: 'datetime-field', placeholder: 'yyyy-mm-dd hh:mm am/pm -0500', required: true
        %span.form_hint= t(".date_hint")
  = field_set_tag t('.fieldset.information') do
    .row
      .field.large-4.columns
        = f.label :odometer
        = f.number_field :odometer
      .field.large-4.columns
        = f.label :current_value
        = f.number_field :current_value
      .field.large-4.columns
        = f.label :appraiser_value
        = f.number_field :appraiser_value
  = field_set_tag t('.fieldset.documents') do
    .row
      .field.large-4.columns
        = f.label :soat_number
        = f.text_field :soat_number
      .field.large-4.columns
        = f.label :soat_begin_date
        = f.text_field :soat_begin_date, class: 'date-field', placeholder: 'yyyy-mm-dd'
      .field.large-4.columns
        = f.label :soat_finish_date
        = f.text_field :soat_finish_date, class: 'date-field', placeholder: 'yyyy-mm-dd'
    .row
      .field.large-4.columns
        = f.label :emissions_certificate
        = f.text_field :emissions_certificate
      .field.large-4.columns
        = f.label :emissions_begin_date
        = f.text_field :emissions_begin_date, class: 'date-field', placeholder: 'yyyy-mm-dd'
      .field.large-4.columns
        = f.label :emissions_finish_date
        = f.text_field :emissions_finish_date, class: 'date-field', placeholder: 'yyyy-mm-dd'
  = field_set_tag t('.fieldset.condition') do
    .row
      .field.small-6.large-2.columns.center
        = f.label :maintenance
        = f.check_box :maintenance
      .field.small-6.large-2.columns.center
        = f.label :repairs
        = f.check_box :repairs
      .field.large-4.columns
        %b= f.label :exterior
        .row
          .radio.small-4.large-4.columns.center
            = f.label :exterior_good
            = f.radio_button :exterior, 'Good', checked: true
          .radio.small-4.large-4.columns.center
            = f.label :exterior_regular
            = f.radio_button :exterior, 'Regular'
          .radio.small-4.large-4.columns.center
            = f.label :exterior_bad
            = f.radio_button :exterior, 'Bad'
        .row
          .field
            = f.label :exterior_notes
            = f.text_area :exterior_notes
      .field.large-4.columns
        = f.label :engine
        .row
          .radio.small-4.large-4.columns.center
            = f.label :engine_good
            = f.radio_button :engine, 'Good', checked: true
          .radio.small-4.large-4.columns.center
            = f.label :engine_regular
            = f.radio_button :engine, 'Regular'
          .radio.small-4.large-4.columns.center
            = f.label :engine_bad
            = f.radio_button :engine, 'Bad'
        .row
          .field
            = f.label :engine_notes
            = f.text_area :engine_notes
    .row
      .field.small-6.large-2.columns.center
        = f.label :security
        = f.check_box :security
      .field.small-6.large-2.columns.center
        = f.label :modifications
        = f.check_box :modifications
      .field.large-4.columns
        = f.label :interior
        .row
          .radio.small-4.large-4.columns.center
            = f.label :interior_good
            = f.radio_button :interior, 'Good', checked: true
          .radio.small-4.large-4.columns.center
            = f.label :interior_regular
            = f.radio_button :interior, 'Regular'
          .radio.small-4.large-4.columns.center
            = f.label :interior_bad
            = f.radio_button :interior, 'Bad'
        .row
          .field
            = f.label :interior_notes
            = f.text_area :interior_notes
      .field.large-4.columns
        .row
          = f.label :accesories
          = f.text_area :accesories
  = field_set_tag t('.fieldset.insurance') do
    .row
      .field.large-4.columns
        = f.label :insurance_number
        = f.text_field :insurance_number
      .field.large-4.columns
        = f.label :insurance_company_id
        = f.collection_select :insurance_company_id, InsuranceCompany.all, :id, :name
      .field.large-4.columns
        = f.label :currency
        = f.text_field :currency
    .row
      .field.large-4.columns
        = f.label :insured_value
        = f.text_field :insured_value
      .field.small-6.large-4.columns
        = f.label :insurance_start
        = f.text_field :insurance_start, class: 'date-field', placeholder: 'yyyy-mm-dd'
      .field.small-6.large-4.columns
        = f.label :insurance_finish
        = f.text_field :insurance_finish, class: 'date-field', placeholder: 'yyyy-mm-dd'
  .row
    .field.columns
      = f.label :observations
      = f.text_area :observations
      %span.form_hint= t(".observations_hint")
  = field_set_tag t('.fieldset.signature') do
    .row
      .field.large-4.columns
        = f.label :person_in_charge
        = f.text_field :person_in_charge
      .field.large-4.columns
        = f.label :pic_id
        = f.text_field :pic_id
      .field.large-4.columns
        = f.label :pic_job
        = f.text_field :pic_job
  .actions
    = f.submit
