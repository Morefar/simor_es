<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('shared.name') %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @kinds.each do |kind| %>
    <tr>
    <td><%= kind.name %></td>
    <td><%= link_to '', edit_kind_path(kind), class: 'icon-edit' %></td>
    <td><%= link_to '', kind, class: 'icon-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>
<br />
<%= paginate @kinds %>
<br />
<%= link_to t('.new_btn'), new_kind_path, class: 'button success radius' %>
