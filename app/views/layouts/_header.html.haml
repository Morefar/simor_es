%header#page_header{ role: "banner" }
  .row
    #ah-logo.columns.large-2.small-2= link_to(image_tag("logo.png", size: "122x74", alt: "AssetHound", id: "logo"), root_url, title: "Inicio")
    %span#tagline.columns.large-2.push-2.hide-for-small assethound
    .columns.large-8.push-1
      %nav#utility.row
        - if user_signed_in?
          .columns.large-2= link_to "ayuda", ""
          .columns.large-2= link_to "actividad reciente", ""
          .columns.large-3
            = form_tag do
              =search_field_tag :search_query, nil, placeholder: "Busqueda"
          %a#user_settings_button.columns.large-3{ href: "#", data: { dropdown: "drop" } }
            %i.icon-user
            %strong= "#{current_user.first_name} #{current_user.last_name}"
          %br
          %ul#drop.f-dropdown{ "data-dropdown-content" => "" }
            %li
              = link_to edit_user_registration_path, title: t("layouts.application.settings") do
                %i.icon-cog.icon-large
                %small= t("layouts.application.settings")
            %li
              = link_to destroy_user_session_path, title: t("layouts.application.sign_out"), method: :delete do
                %i.icon-signout.icon-large
                %small= t("layouts.application.sign_out")
