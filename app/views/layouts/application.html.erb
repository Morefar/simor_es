<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
 <meta charset="utf-8" />

 <!-- Uncomment to make IE8 render like IE7 -->
 <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

 <!-- Set the viewport width to device width for mobile -->
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />

 <title><%= content_for?(:title) ? yield(:title) : t('.title') %></title>

 <%= stylesheet_link_tag    "application" %>
 <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
 <%= javascript_include_tag "vendor/custom.modernizr" %>
 <%= csrf_meta_tags %>
</head>

<body>

<header>
  <section class="utilities">
    <% if user_signed_in? %>
      <%= "#{current_user.first_name} #{current_user.last_name}" %>
      &nbsp;&nbsp;
      <%= link_to edit_user_registration_path, title: t(".settings"), rel: 'tooltip' do %>
        <i class="icon-cog icon-large"></i> <small><%= t(".settings") %></small>
      <% end %>
      &nbsp;&nbsp;
      <%= link_to destroy_user_session_path, title: t(".sign_out"), rel: 'tooltip', method: :delete do %>
        <i class="icon-signout icon-large"></i> <small><%= t(".sign_out") %></small>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, title: t(".sign_in"), rel: 'tooltip' do %>
        <i class="icon-signin icon-large"></i> <small><%= t(".sign_in") %></small>
      <% end %>
      &nbsp;&nbsp;
      <%= link_to new_user_registration_path, title: t(".sign_up"), rel: 'tooltip' do %>
        <i class="icon-group icon-large"></i> <small><%= t(".sign_up") %></small>
      <% end %>
    <% end %>
  </section>
</header>
  <div class="container-with-nav">
    <div>
      <a href="#top" data-magellan-destination='top'>
      <nav class="top-bar">
        <ul class="title-area">
          <!-- Title Area -->
          <li class="name">
          <h1>
            <%= link_to root_url, title: t(".home"), rel: "tooltip" do %>
              <i class="icon-home"></i> <%= t('.home') %>
            <% end %>
          </h1>
          </li>
          <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
          <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>

        <section class="top-bar-section">
          <!-- Left Nav Section -->
          <ul class="left">
            <li class="divider"></li>
            <li class="active"><%= link_to t('.nav.assets'), assets_url %></li>
            <li class="divider"></li>
            <li><%= link_to t('.nav.contracts'), contracts_url %></li>
            <li class="divider"></li>
            <li><%= link_to t('.nav.inspections'), inspections_url %></li>
            <li class="divider"></li>
            <!-- li> <%#= link_to t('.nav.inspection_orders'), inspection_orders_url %></li -->
            <li class="divider"></li>
          </ul>

          <!-- Right Nav Section -->
          <ul class="right">
            <li class="divider hide-for-small"></li>
            <li class="has-dropdown"><a href="#"><%= t('.settings')%></a>
              <ul class="dropdown">
                <% if true %>
                <li><label>Params</label></li>
                <li><%= link_to t('.nav.entities'), entities_url %></li>
                <li><%= link_to t('.nav.colors'), colors_url %></li>
                <li><%= link_to t('.nav.contract_categories'), categories_url %></li>
                <li><%= link_to t('.nav.makes'), makes_url %></li>
                <li><%= link_to t('.nav.models'), models_url %></li>
                <li><%= link_to t('.nav.builds'), builds_url %></li>
                <li><%= link_to t('.nav.kinds'), kinds_url %></li>
                <li><%= link_to t('.nav.bodies'), bodies_url %></li>
                <li><%= link_to t('.nav.insurance_companies'), insurance_companies_url %></li>
                <li class="divider"></li>
                <% end %>
                <%#<li><label>User</label></li>%>
                <%#<li><a href="#">Dropdown Level 1d</a></li>%>
                <%#<li><a href="#">Dropdown Level 1e</a></li>%>
                <%#<li><a href="#">Dropdown Level 1f</a></li>%>
                <%#<li class="divider"></li>%>
                <%#<li><a href="#">See all &rarr;</a></li>%>
              </ul>
            </li>
            <li class="divider"></li>
            <li class="has-form">
              <form>
                <div class="row collapse">
                  <div class="small-8 columns">
                    <input type="text">
                  </div>
                  <div class="small-4 columns">
                    <a href="#" class="alert button"><%= t('.search') %></a>
                  </div>
                </div>
              </form>
            </li>
          </ul>
        </section>
      </nav>
      </a>
    </div>
    <div class="workspace-container">
      <nav class="breadcrumbs">
        <%= render_breadcrumbs separator: '/ ' %>
      </nav>
      <% flash.each do |k,v| %>
          <div class='flash <%= k %>'><%= v %></div>
      <% end %>
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </div>
  <footer>
      <small>
      &copy; <%= link_to 'Morefar S.A.S.', 'http://morefar.co/' %> 2013. AssetHound&trade; & assethound.co&trade; son marcas registradas.</small>
  </footer>
  <%= javascript_include_tag "application" %>
</body>
</html>
